apiVersion: v1
data:
  initK8sAuth.sh: |
    #/bin/sh
    sleep 10
    vault auth enable kubernetes
    vault write auth/kubernetes/config token_reviewer_jwt="${TOKEN_REVIEW_JWT}" kubernetes_host="$KUBERNETES_SERVICE_HOST:$KUBERNETES_SERVICE_PORT" kubernetes_ca_cert="${KUBE_CA_CERT}"
kind: ConfigMap
metadata:
  managedFields:
  - apiVersion: v1
    fieldsType: FieldsV1
    fieldsV1:
      f:data:
        .: {}
        f:initK8sAuth.sh: {}
  name: init
  namespace: vault
